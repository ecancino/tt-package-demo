{
  "name": "tt-package-demo",
  "version": "1.0.0",
  "description": "A demo package for Total TypeScript",
  "keywords": [
    "demo",
    "typescript"
  ],
  "homepage": "https://github.com/ecancino/tt-package-demo",
  "author": "Eduardo Cancino <ecancinozarate@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecancino/tt-package-demo.git"
  },
  "main": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4"
  },
  "scripts": {
    "build": "tsup",
    "lint": "tsc",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "ci": "npm run lint && npm run check-format && npm run check-exports &&  npm run build",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm"
  }
}
